<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fadeScrollbars="true"
    android:hapticFeedbackEnabled="true"
    tools:context=".search">


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="343dp"
        android:layout_height="445dp"
        android:layout_marginBottom="70sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.784">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="174dp"
                android:layout_height="match_parent"
                android:background="#40E9E4EA"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:text="ORIGIN"
                    android:textColor="#252222"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:text="DESTINATION"
                    android:textColor="#171616"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="DATE"
                    android:textColor="#171616"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:text="ADULT"
                    android:textColor="#171616"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:text="CHILDREN"
                    android:textColor="#222020"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="INFANTS"
                    android:textColor="#131212"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:text="WAY"
                    android:textColor="#1B1A1A"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="CLASS"
                    android:textColor="#1B1A1A"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/o"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:background="#77CDDC39" />

                <Spinner
                    android:id="@+id/destination1"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="#77CDDC39" />

                <TextView
                    android:id="@+id/date1"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/border"
                    android:textColor="#171616"
                    android:textSize="24sp" />

                <Spinner
                    android:id="@+id/adult"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:background="#77CDDC39" />

                <Spinner
                    android:id="@+id/children"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:background="#77CDDC39" />

                <Spinner
                    android:id="@+id/infants"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#77CDDC39" />

                <Spinner
                    android:id="@+id/way2"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:background="#77CDDC39" />

                <Spinner
                    android:id="@+id/class1"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="#77CDDC39" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:background="#77CDDC39"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.991"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.125"
                    app:srcCompat="@drawable/down" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="#77CDDC39"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.991"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.125"
                    app:srcCompat="@drawable/down" />

                <TextView
                    android:id="@+id/textView45"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/border" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="#77CDDC39"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.991"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.125"
                    app:srcCompat="@drawable/down" />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="#77CDDC39"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.991"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.125"
                    app:srcCompat="@drawable/down" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:background="#77CDDC39"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.991"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.125"
                    app:srcCompat="@drawable/down" />

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="#77CDDC39"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.991"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.125"
                    app:srcCompat="@drawable/down" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="#77CDDC39"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.991"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.125"
                    app:srcCompat="@drawable/down" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/se"
        android:layout_width="236dp"
        android:layout_height="46dp"
        android:text="SEARCH FLIGHT"
        android:textColor="#C99C27B0"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />

    <Button
        android:id="@+id/search"
        android:layout_width="114dp"
        android:layout_height="60dp"
        android:background="#939C27B0"
        android:text="SEARCH"
        android:textColor="#FDFCFC"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.885"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.952" />


</androidx.constraintlayout.widget.ConstraintLayout>